<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoProgra.RegisterPage">
    <StackLayout Padding="20">
        <Label Text="Nombre Completo" FontAttributes="Bold" />
        <Entry x:Name="FullNameEntry" Placeholder="Introduce tu nombre completo" />
        <Label Text="Fecha de Nacimiento" FontAttributes="Bold" />
        <DatePicker x:Name="BirthDatePicker" />
        <Label Text="Correo Electrónico" FontAttributes="Bold" />
        <Entry x:Name="EmailEntry" Placeholder="Introduce tu correo" />
        <Label Text="Contraseña" FontAttributes="Bold" />
        <Entry x:Name="PasswordEntry" Placeholder="Introduce tu contraseña" IsPassword="True" />
        <Button Text="Registrarse" Clicked="OnRegisterButtonClicked" />
    </StackLayout>
</ContentPage>